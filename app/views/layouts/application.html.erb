<!DOCTYPE html>
<html>
  <head>
    <title>GoalApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
    <%= favicon_link_tag asset_path('favicon.svg') %>
    
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
    
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-59503920-8"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'UA-59503920-8');
    </script>

  </head>

  <body>
    <% flash.each do |name, msg| -%>
      <div class="notification-container">
        <% if flash[:notice] %>
          <div class="<%= name %> notification is-info">
            <button class="delete"></button>
            <%= msg %>
          </div>
        <% end %>
      </div>
    <% end -%>
    <div id="columns-container" class="columns">
      <% if logged_in? %>
        <nav class="column navigation" id="side-menu">
          <%= render "shared/navigation" %>
        </nav class="navbar" role="navigation" aria-label="main navigation">
      <% end %>
      <div class="column" id="main-window">
        <%= render "shared/header" %>
        <%= yield %>
      </div>
    </div>
    
  </body>
</html>
