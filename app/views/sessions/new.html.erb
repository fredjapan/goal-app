<div id="welcome" class="columns is-vcentered">
  <%= image_tag  "goal-background.png", id: "goal-background" %>
  <div class="column">
    <div class="card">
      <div class="card-content">
        <div class="title has-text-centered">Log in</div>
          <div class="has-text-danger"><%= flash[:error] %></div><br/>

          <%= form_tag login_path do %>
            <div class="field">
              <label class="heading">Email</label>
              <div class="control has-icons-left">
                <%= text_field_tag :email, nil, class: "input" %>
                <span class="icon is-small is-left">
                  <i class="fas fa-envelope"></i>
                </span>
              </div>
              <br/>
              <label class="heading">Password</label>
              <div class="control has-icons-left">
                <%= password_field_tag :password, nil, class: "input", type: "password" %>
                <span class="icon is-small is-left">
                  <i class="fas fa-lock"></i>
                </span>
              </div>
            </div>
            <br/>
            <div class="has-text-centered">
              <%= submit_tag "Log In", class: "button is-primary is-fullwidth clickable" %>
              <div>
                <br/>
                <span>Don't have an account? </span>
                <%= link_to "Sign Up", new_user_path, class: "" %>
              </div>
            </div>
          <%end%>

      </div>
    </div>
  </div>
</div>
