<div class="level">
  <div class="level-left">
    <div class="level-item">
      <h2 class="title">Create a New Life Goal</h2>
    </div>
  </div>
</div>

<%= form_with model: @life_goal, url: life_goals_path, id: "new-life-goal-form", local: true do |f| %>
  <div class="field">
    <label class="label">ROLE - I want to be...</label>
    <div class="control">
      <%= f.text_field :title, class: "input"%>
    </div>
  </div>
  <div class="field">
    <label class="label">WHAT - It looks/feels like</label>
    <div class="control">
      <%= f.text_area :what, class: "textarea"%>
    </div>
  </div>
    <div class="field">
    <label class="label">WHY - In order to...</label>
    <div class="control">
      <%= f.text_area :why, class: "textarea"%>
    </div>
  </div>

  <br/>
  
  <div class="field is-grouped">
    <div class="control">
      <%= f.submit "Save", class: "button is-primary" %>
    </div>
    <div class="control">
      <%= link_to "Cancel", life_goals_path, class: "button" %>
    </div>
  </div>
<% end %>